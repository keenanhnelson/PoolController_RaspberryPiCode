{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make && rsync ./Build/out ${env:PiUsername}@${env:PiHostname}:${env:PoolControllerProjectPiPath}/RaspberryPiCode/Build",
            "problemMatcher": []
        },
        {
            "label": "run gdbserver",
            "type": "shell",
            "command": "ssh ${env:PiUsername}@${env:PiHostname} 'sudo kill $(sudo lsof -ti :2000); sudo killall out; cd ${env:PoolControllerProjectPiPath}/RaspberryPiCode && sudo gdbserver localhost:2000 ./Build/out'",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
              }
        },
        {
            "label": "keenan run program",
            "type": "shell",
            "command": "ssh ${env:PiUsername}@${env:PiHostname} 'sudo killall out; cd ${env:PoolControllerProjectPiPath}/RaspberryPiCode && sudo ./Build/out'",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ]
        }
    ]
}